        <shape>
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#6dd5ed"
                android:endColor="#2193b0"/>
            <corners android:radius="12dp"/>
            <stroke android:width="1dp" android:color="@color/glass_border_white"/>
        </shape>
    </item>
