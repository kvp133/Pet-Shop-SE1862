<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="600dp"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/glass_bg"
    android:padding="16dp"
    tools:context=".AdminDashBoardFragment">

    <!-- BarChart for Trending Products -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:layout_weight="0.6"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/glass_white_50">

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/trendingProductBarChart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp">

        <!-- Total User Circle -->
        <FrameLayout
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="8dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="60dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/glass_blue_1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/totalUserText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Total User"
                        android:textSize="16sp"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/poppins_semibold"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </FrameLayout>

        <!-- Total Product Circle -->
        <FrameLayout
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="8dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="60dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/glass_blue_2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/totalProductText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Total Product"
                        android:textSize="16sp"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/poppins_semibold"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </FrameLayout>

    </LinearLayout>

    <!-- Second Row (2 circles horizontally) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp">

        <!-- Total Category Circle -->
        <FrameLayout
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="8dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="60dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/glass_link_blue">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/totalCategoryText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Total Category"
                        android:textSize="16sp"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/poppins_semibold"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </FrameLayout>

        <!-- Total Order Circle -->
        <FrameLayout
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="8dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="60dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/glass_blue_1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/totalOrderText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Total Order"
                        android:textSize="16sp"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/poppins_semibold"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </FrameLayout>

    </LinearLayout>

</LinearLayout>
